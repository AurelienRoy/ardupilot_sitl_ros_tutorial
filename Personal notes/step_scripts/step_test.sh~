#!/bin/bash
#----------------------------------------------------------
# Purpose:
#    Installs dependencies required by the Ardupilot's SITL.
#----------------------------------------------------------
# Acknowledgements / References:
#    This script comes largely from the file initvagrant.sh
#    located on ardupilot/Tools/vagrant.
#----------------------------------------------------------

RED='\033[0;32m'
NC='\033[0m' # No Color
printf "${RED}love hello${NC}"
echo "ROS is now installed"
echo "You should close this terminal and open a new one before launching"
echo "the step_5 script"

printf "I ${RED}love hello${NC}\n"

